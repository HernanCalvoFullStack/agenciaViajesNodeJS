extends ./layout/index

block contenido
    main.container.mt-5 
        h1.text-center.mt-5 #{pagina}

        blockquote.text-center Lee Sobre Nuestro Clientes y sus Experiencias 
        include ./layout/bloque_opiniones

        .row 

            .col-md-12
                h2.d-block.w-100.text-center Dejanos tu opinión

                if(errores)
                    each error in errores
                        .alert.col.alert-danger.text-center= errores


                .row.justify-content-center.col
                    .col-md-8 
                        form(action="/opiniones" method="POST")
                            .form-group
                                label(for="nombre") Nombre
                                input#nombre(type="text", placeholder="Tu Nombre", name="nombre", class="form-control", value=nombre)
                            .form-group
                                label(for="correo") Correo Electrónico
                                input#nombre(type="mail", placeholder="Tu Correo", name="correo", class="form-control", value=correo)
                            .form-group
                                label(for="mensaje") Mensaje
                                textarea#mensaje(class="form-control", name="mensaje", placeholder="Tu Mensaje", rows=3)= mensaje
                            input.btn.btn-success.btn-block(type="submit")